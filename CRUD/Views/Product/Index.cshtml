@model List<CRUD.Models.Entities.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="/product/create">Add Product</a>
<hr />
<h3>All Products</h3>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
    </tr>
    @foreach(var p in Model)
            {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Qty</td>
                <td>@p.Description</td>
                <td><a href="/product/edit/@p.Id">Edit</a></td>
                <td><a href="/product/delete/@p.Id">Delete</a></td>
            </tr>
            }
</table>


