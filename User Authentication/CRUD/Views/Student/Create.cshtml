@model CRUD.Models.Entities.Student
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Student/Create" method="post">
    Name: <input type="text" class="form-control" name="Name" value="@Model.Name" />
    @Html.ValidationMessageFor(m => m.Name, "" , new {@class="text-danger"})
    <br>Dob: <input type="date" class="form-control" name="Dob" value="@Model.Dob" />
    @Html.ValidationMessageFor(m => m.Dob, "", new { @class = "text-danger" })
    Gender: <input type="radio" name="Gender" value="Male" class="" />Male
    <input type="radio" name="Gender" value="Female" class="" />Female<br>
    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
    <input type="submit" value="Add" class="btn btn-success" />
</form>
